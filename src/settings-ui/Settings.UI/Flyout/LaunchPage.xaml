<Page
    x:Class="Microsoft.PowerToys.Settings.UI.Flyout.LaunchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Microsoft.PowerToys.Settings.UI.Flyout"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>
            <controls:WrapPanel
                Grid.Row="0"
                Width="312"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                HorizontalSpacing="12"
                Orientation="Horizontal"
                VerticalSpacing="24">
                <StackPanel Spacing="8">
                    <Button
                        Width="96"
                        Height="48"
                        Tag="Run"
                        ToolTipService.ToolTip="Launch Run (Alt + Space)">
                        <BitmapIcon
                            Height="24"
                            ShowAsMonochrome="False"
                            UriSource="ms-appx:///Assets/Icons/PowerToys Run.png" />
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Run" />
                </StackPanel>
                <StackPanel Spacing="8">
                    <Button
                        Width="96"
                        Height="48"
                        Tag="Color Picker"
                        ToolTipService.ToolTip="Launch Color Picker (Ctrl + Alt + C)">
                        <BitmapIcon
                            Height="20"
                            ShowAsMonochrome="False"
                            UriSource="ms-appx:///Assets/Icons/Color Picker.png" />
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Color Picker" />
                </StackPanel>
                <StackPanel Spacing="8">
                    <Button
                        Width="96"
                        Height="48"
                        Tag="Shortcut Guide"
                        ToolTipService.ToolTip="Launch Shortcut Guide (Windows key)">
                        <BitmapIcon
                            Height="20"
                            ShowAsMonochrome="False"
                            UriSource="ms-appx:///Assets/Icons/Shortcut Guide.png" />
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Shortcut Guide" />
                </StackPanel>


                <StackPanel Spacing="8">
                    <Button
                        Width="96"
                        Height="48"
                        Click="Options_Click"
                        Tag="Awake">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <BitmapIcon
                                Height="24"
                                ShowAsMonochrome="False"
                                UriSource="ms-appx:///Assets/Icons/Awake.png" />
                            <FontIcon FontSize="12" Glyph="&#xE097;" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Awake" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <Button
                        Width="96"
                        Height="48"
                        Click="Options_Click"
                        Tag="FancyZones">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <BitmapIcon
                                Height="24"
                                ShowAsMonochrome="False"
                                UriSource="ms-appx:///Assets/Icons/FancyZones.png" />
                            <FontIcon FontSize="12" Glyph="&#xE097;" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="FancyZones" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <Button
                        Width="96"
                        Height="48"
                        Click="Options_Click"
                        Tag="VCM">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <BitmapIcon
                                Height="24"
                                ShowAsMonochrome="False"
                                UriSource="ms-appx:///Assets/Icons/Video Conference Mute.png" />
                            <FontIcon FontSize="12" Glyph="&#xE097;" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Mute" />
                </StackPanel>

            </controls:WrapPanel>


            <Grid
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource SystemControlAcrylicElementBrush}" />
            <Rectangle
                Grid.Row="1"
                Height="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Fill="{ThemeResource FlyoutBorderThemeBrush}" />

            <StackPanel
                Grid.Row="1"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <!--<Button Background="Transparent" ToolTipService.ToolTip="Documentation" BorderBrush="Transparent">
                <FontIcon Glyph="&#xE11B;" FontSize="14" />
            </Button>-->
                <Button
                    Height="36"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="Settings">
                    <FontIcon FontSize="14" Glyph="&#xE115;" />
                </Button>

            </StackPanel>
            <!--<controls1:InfoBar Title="Update available" Message="0.51" Background="Transparent" BorderBrush="Transparent" Margin="4,0,36,0" Grid.Row="1" IsOpen="True" IsClosable="False" />-->
            <!--<controls1:InfoBar Title="Update installed" Background="Transparent" BorderBrush="Transparent" Margin="4,0,36,0" Grid.Row="1" IsOpen="True" IsClosable="False">
            <controls1:InfoBar.ActionButton>
                <HyperlinkButton Content="See what's new"/>
            </controls1:InfoBar.ActionButton>
        </controls1:InfoBar>-->
        </Grid>
    </Grid>
</Page>
